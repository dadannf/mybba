# =============================================
# Environment Configuration
# =============================================

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=True

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dbsekolah
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# PaddleOCR Settings (PaddleOCR 3.3.1+ API)
OCR_LANG=en  # Language: en, ch (Chinese), etc
OCR_USE_ANGLE_CLS=True  # Enable text orientation detection
# OCR_DET_MODEL_DIR=  # Optional: Custom text_detection_model_dir
# OCR_REC_MODEL_DIR=  # Optional: Custom text_recognition_model_dir
# OCR_CLS_MODEL_DIR=  # Optional: Custom textline_orientation_model_dir

# Image Processing
MAX_IMAGE_SIZE=4096
MIN_IMAGE_SIZE=32
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff
MAX_FILE_SIZE_MB=10

# Validation Thresholds
MIN_CONFIDENCE_SCORE=0.70
MIN_TEXT_DETECTION_SCORE=0.60
MIN_RECOGNITION_SCORE=0.75
MIN_AMOUNT_MATCH_THRESHOLD=0.95

# Upload Settings
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ocr_system.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:8080,http://mybba.test:8080
